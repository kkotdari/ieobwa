<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 1. 별칭 설정 -->
	<typeAliases>
		<typeAlias type="com.kotddari.ieobwa.biz.board.BoardVO" alias="board"/>
		<typeAlias type="com.kotddari.ieobwa.biz.word.WordVO" alias="word"/>
		<typeAlias type="com.kotddari.ieobwa.biz.reply.ReplyVO" alias="reply"/>
	</typeAliases>
	<!-- 2. SQL Mapper 설정 -->
	<mappers>
		<mapper resource="mappings/board-mapping.xml"/>
		<mapper resource="mappings/word-mapping.xml"/>
		<mapper resource="mappings/reply-mapping.xml"/>
	</mappers>
</configuration>